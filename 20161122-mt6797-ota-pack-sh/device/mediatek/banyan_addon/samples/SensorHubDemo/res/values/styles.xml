<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@android:style/Theme.Holo">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="sketch_horizontal_divider">
        <item name="android:layout_height">2dip</item>
        <item name="android:background">?android:attr/dividerHorizontal</item>
    </style>

    <style name="ImageSwitch">
        <item name="android:textOn"></item>
        <item name="android:textOff"></item>
        <item name="android:switchMinWidth">80dp</item>
        <item name="android:thumbTextPadding">20dp</item>
        <item name="android:thumb">@drawable/imageswitch</item>
    </style>

</resources>
